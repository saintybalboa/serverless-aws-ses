{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "lib": [
      "es2019",
      "es2020.string",
      "esnext.array"
    ],
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
